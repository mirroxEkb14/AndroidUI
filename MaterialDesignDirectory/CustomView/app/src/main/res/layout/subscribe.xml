<?xml version="1.0" encoding="utf-8"?>

<!--
   when we have a block in our app that we need to show
   on each screen, there is a point in taking out this
   block to a separate XML-file

   also we need a class for this markup

   as a root element specify 'merge' instead of LinearLayout
   and add a tag 'tools:parentTag="android.widget.LinearLayout'
-->

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mail@gmail.com" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe" />

</merge>