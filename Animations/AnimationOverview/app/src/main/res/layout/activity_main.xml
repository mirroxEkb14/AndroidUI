<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--
    create an animation: res -> New -> Android Resource directory ->
    resource type: anim
    anim -> New -> Animation Resource File -> root element: set
    anim -> New -> Animation Resource File -> root element:
    layoutAnimation
    -->

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_container2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layoutAnimation="@anim/button_appearance_animation_layout">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_container2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layoutAnimation="@anim/button_appearance2_animation_layout">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>