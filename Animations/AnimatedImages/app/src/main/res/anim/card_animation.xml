<?xml version="1.0" encoding="utf-8"?>

<!-- While appearing the image will be enlarging and appearing simultaneously -->

<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500">
    <scale
        android:fromYScale="0"
        android:fromXScale="0"
        android:toYScale="1"
        android:toXScale="1"
        android:pivotY="50%"
        android:pivotX="50%"/>

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"/>
</set>