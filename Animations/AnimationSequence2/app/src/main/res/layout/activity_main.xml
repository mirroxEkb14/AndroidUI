<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31B5E3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_sun"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sun"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/img_cloud1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/cloud1"
        android:layout_marginTop="75dp"
        android:translationX="-1000dp"/>

    <ImageView
        android:id="@+id/img_cloud2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/cloud2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="210dp"
        android:translationX="1000dp"/>

    <FrameLayout
        android:id="@+id/img_grass"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#669803"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>