<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_mood"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_mood_24"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nestedscroll_name_text"
            android:textSize="18sp"
            android:layout_toEndOf="@id/img_mood"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txt_prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nestedscroll_prof_text"
            android:textSize="14sp"
            android:layout_toEndOf="@id/img_mood"
            android:layout_below="@id/txt_name"/>

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/large_text"
            android:textSize="12sp"
            android:layout_below="@id/img_mood"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>